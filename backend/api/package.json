{
  "name": "racing-data-api",
  "version": "1.0.0",
  "description": "REST API for Toyota GR Cup Series race data",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
